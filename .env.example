# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nestjs-tutorial

# JWT Configuration
JWT_SECRET=your-super-secret-key-here
JWT_EXPIRATION=1d

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Redis Configuration (for Queue and Cache)
REDIS_HOST=localhost
REDIS_PORT=6379

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/notifications
WS_CORS_ORIGIN=*

# Email Configuration (for background jobs)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# API Documentation
SWAGGER_TITLE=NestJS Tutorial API
SWAGGER_DESCRIPTION=A comprehensive NestJS API with all the bells and whistles
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# Health Check Configuration
HEALTH_CHECK_TOKEN=your-health-check-token-here

# GraphQL Configuration
GRAPHQL_PLAYGROUND=true
GRAPHQL_DEBUG=true
GRAPHQL_SCHEMA_PATH=schema.gql
GRAPHQL_SORT_SCHEMA=true
GRAPHQL_INTROSPECTION=true 

# Microservices Configuration
USER_SERVICE_HOST=localhost
USER_SERVICE_PORT=3001
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=3002
NOTIFICATION_SERVICE_HOST=localhost
NOTIFICATION_SERVICE_PORT=3003 
